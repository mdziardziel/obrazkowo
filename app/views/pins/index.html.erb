<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista pinów</h3>
  </div>
  <div class="panel-body">
    <table>
  		<thead>
    		<tr>
    		  <th>Opis</th>
  		    <th colspan="3"></th>
 		   </tr>
		 </thead>

 		 <tbody>
 		   <% @pins.each do |pin| %>
   		   <tr>
   		     <td><%= pin.description %></td>
   		     <td><%= link_to 'Wyświetl', pin %></td>
					<% if pin.user == current_user %>
    		    <td><%= link_to 'Edytuj', edit_pin_path(pin) %></td>
    		    <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<% end %>
  		    </tr>
  		  <% end %>
  		</tbody>
		</table>

		<br>

  </div>
	<div class="panel-footer">
		<%= link_to 'Nowy pin', new_pin_path %>
	</div>
</div>








